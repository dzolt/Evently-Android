<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_constraintTop_toTopOf="parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/main_input_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/email_address"
        style="@style/Roboto14Pt"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/main_input_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Roboto14Pt"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/main_input_title"/>
    <View
        android:id="@+id/main_input_cover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>