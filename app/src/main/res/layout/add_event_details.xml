<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.apusart.evently_android.logged.create_event.CreateEventViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="20dp"
        android:background="@color/white">
        <com.apusart.components.MainInput
            android:id="@+id/add_event_details_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:main_input_input_title="@string/event_name"
            android:imeOptions="actionNext"
            android:inputType="text"
            app:main_input_input="@={viewModel.eventName}"
            />
        <com.apusart.components.MainInput
            android:id="@+id/add_event_details_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/add_event_details_event_name"
            android:layout_marginTop="10dp"
            app:main_input_input_title="@string/description"
            app:edit_text_height="150dp"
            android:gravity="bottom"
            android:imeOptions="actionNext"
            android:inputType="textMultiLine"
            app:main_input_input="@={viewModel.eventDescription}"
            />
        <TextView
            android:id="@+id/add_event_details_event_photo_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Roboto14Pt"
            app:layout_constraintTop_toBottomOf="@id/add_event_details_event_description"
            android:text="@string/cover_photo"
            android:layout_marginTop="10dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            app:layout_constraintTop_toBottomOf="@id/add_event_details_event_photo_cover"
            android:background="@color/pale_grey_three"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/add_event_details_event_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/add_photo"
                android:gravity="center"
                android:background="@drawable/pale_grey_ripple"
                />
            <ImageView
                android:id="@+id/add_event_details_event_add_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>